{
    "manifest_version": 2,

    "name": "TeaVM DevMode",
    "description": "TeaVM DevMode plugin",
    "version": "1.0",

    "permissions" : [
        "debugger",
        "activeTab",
        "tabs" ],

    "browser_action" : {
        "default_icon": "ghost.png",
        "default_title ": "Bind TeaVM development mode"
    },

    "background": {
        "scripts": ["shared.js", "main.js"],
        "persistent": false
    },

    "web_accessible_resources" : ["inject.js"]
}